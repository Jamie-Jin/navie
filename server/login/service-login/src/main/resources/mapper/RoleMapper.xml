<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jamie.service.login.dao.RoleDao">

    <insert id="insert" keyProperty="id"
            parameterType="com.jamie.service.login.entity.RoleEntity">
        insert into `role`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            role,
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            #{role},
        </trim>
    </insert>

    <!-- 根据条件获取角色信息 -->
    <select id="getRole"
            parameterType="com.jamie.service.login.vo.RoleVo"
            resultType="com.jamie.service.login.entity.RoleEntity">
        select
        <trim suffixOverrides=",">
            id, role, role_cn,
        </trim>
        from `role`
        <trim prefix="where" prefixOverrides="and">
            <if test="role != null">
                and role = #{role}
            </if>
            <if test="roleCn != null">
                and role_cn = #{roleCn}
            </if>
        </trim>
    </select>

</mapper>